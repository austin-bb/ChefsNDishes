@using ChefsNDishes.Models
@model Dish 

<a href="/">Home</a>
<h1 class="text-center m-5">Add a Dish!</h1>

<form asp-controller="Dishes" asp-action="AddDish" method="POST" class="d-flex justify-content-center">
  <div class="m-5">
    <div class="mt-3">
      <label asp-for="DishName"></label>
      <span asp-validation-for="DishName" class="text-danger font-weight-bold"></span>
      <input class="form-control" asp-for="DishName">
    </div>
    <div class="mt-3">
      <label asp-for="Calories"></label>
      <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
      <input class="form-control" asp-for="Calories">
    </div>
      <div>
        <div class="mt-3">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
        <textarea asp-for="Description" cols="30" rows="5" class="form-control"></textarea>
        </div>
        <button class="btn btn-primary mt-3" type="submit">Submit</button>
    </div>
  </div>
  <div class="m-5">
    <label asp-for="ChefId">Chef</label>
    <select asp-for="ChefId" id="Chef" class="form-control">
      @foreach (Chef chef in ViewBag.SelectChefs)
      {
        <option value="@chef.ChefId">@chef.FName @chef.LName</option>
      }
    </select>
  </div>
  <div class="m-5">
    <label asp-for="Tastiness"></label>
    <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
    <select asp-for="Tastiness" id="Tastiness" class="form-control">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
  </div>
</form>

